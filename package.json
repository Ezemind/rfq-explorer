{
  "name": "rfq-explorer",
  "version": "1.1.6",
  "description": "RFQ Explorer - Professional CRM solution for managing quotes and customer communications",
  "author": {
    "name": "Pieter Kemp",
    "email": "pieter@ezemind.com"
  },
  "copyright": "Copyright © 2025 Ezemind. All rights reserved.",
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "wait-on http://localhost:3000 && electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-publish": "npm run build && electron-builder --publish=always",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.0",
    "googleapis": "^150.0.1",
    "imap": "^0.8.19",
    "imapflow": "^1.0.189",
    "lucide-react": "^0.525.0",
    "mailparser": "^3.7.4",
    "nodemailer": "^7.0.4",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^7.6.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "wait-on": "^7.2.0"
  },
  "homepage": "./",
  "build": {
    "appId": "com.rfqexplorer.app",
    "productName": "RFQ Explorer",
    "copyright": "Copyright © 2025 Ezemind. All rights reserved.",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js",
      "public/preload.js"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RFQ Explorer",
      "displayLanguageSelector": false,
      "installerLanguages": ["en_US"],
      "license": "LICENSE.txt",
      "warningsAsErrors": false,
      "perMachine": false,
      "allowElevation": true,
      "runAfterFinish": true,
      "menuCategory": "Business",
      "deleteAppDataOnUninstall": false,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerSidebar": "assets/icon.ico"
    },
    "publish": {
      "provider": "github",
      "owner": "Ezemind",
      "repo": "rfq-explorer",
      "private": false,
      "releaseType": "release",
      "publishAutoUpdate": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
